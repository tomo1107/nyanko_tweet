<div class="contents row">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class='login-flash-message'>
        <%= devise_error_messages! %>
      </div>

      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, placeholder: " 6文字以下", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <% if @minimum_password_length %>
          <%= f.password_field :password, placeholder: " #{@minimum_password_length}文字以下の英数字", autocomplete: "off" %>
        <% elsif %>
          <%= f.password_field :password, autocomplete: "off" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>